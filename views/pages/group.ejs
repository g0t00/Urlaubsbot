<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
    <div class="jumbotron">
        <h1>Groupinfo</h1>
        <p>Membercount: <%= group.members.length %>; Total Cost: <%= group.getSum().toFixed(2) %>; Average: <%= (group.getSum()/group.members.length).toFixed(2)%> Currency: <%= group.currency || 'not set' %></p>
        <p><a href="https://docs.google.com/spreadsheets/d/<%=group.sheetId%>">Sheet</a></p>
        <div class="members">
          <% members.forEach(member => { %>
            <div class="card member">
              <div class="card-body">
                <h5 class="card-title"><%= member.name %></h5>
                <table class="table table-striped">
                  <tr><th>Total</th><th><%= member.memberSum %></th></tr>
                  <% member.entries.forEach(entry => { %>
                    <tr><td><%=entry.description%></td><td><%= entry.amount.toFixed(2) %></td></tr>
                  <% }); %>
                  <% if (member.toPay > 0) { %>
                    <tr class="table-danger"><td>To Pay:</td><td><%= member.toPay %></td></tr>
                  <% } else { %>
                    <tr class="table-success"><td>Gets:</td><td><%= member.toPay %></td></tr>
                  <% } %>
                </table>
              </div>
            </div>
          <% }); %>
        </div>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Debug</h5>
            <pre><code><%- debug %></code></pre>
          </div>
        </div>
    </div>
</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>
