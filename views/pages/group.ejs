<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
    <div class="jumbotron">
        <h1>Groupinfo</h1>
        <script async src="https://telegram.org/js/telegram-widget.js?4" data-telegram-login="UrlaubBetaBot" data-size="large" data-onauth="onTelegramAuth(user)"></script>
        <p>Membercount: <%= group.members.length %>; Total Cost: <%= group.getSum().toFixed(2) %>; Average: <%= (group.getSum()/group.members.length).toFixed(2)%> Currency: <%= group.currency || 'not set' %></p>
        <p>
          <a target="_blank" href="https://docs.google.com/spreadsheets/d/<%=group.sheetId%>">Sheet-Link</a>
          &nbsp;&nbsp;&nbsp;&nbsp;<a href="sheet-export/<%= group.id %>" class="sheet-export">Export</a>
          <i class="fas fa-lg fa-spinner fa-spin export-loading"></i>
          <i class="fas fa-lg fa-check-circle export-done"></i>
        <span class="right-align">Last Export: <span class="time"><%= group.lastExport %></span></span></p>

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Debug</h5>
            <pre><code><%- JSON.stringify(evaluation, null, 2) %></code></pre>
          </div>
        </div>
    </div>
</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>
